generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id             String   @id @default(uuid())
  nom            String
  telephone      String?  @unique
  email          String?  @unique
  siteWeb        String?  @unique
  adresse        String?
  ville          String
  codePostal     String?
  metier         String
  motifSelection String
  statut         String   @default("A contacter")
  note           String?
  noteGoogle     Float?
  nombreAvis     Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([ville])
  @@index([statut])
  @@index([metier])
}
